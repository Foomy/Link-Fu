	<?php echo $this->form; ?>
<?php endif; ?>
</div>

<?php if (! empty($this->taglist)): ?>
<div id="taglist">
	<ul>
	<?php foreach ($this->taglist as $idx => $tag): ?>
		<li class="is_tag tagWeight<?php echo $tag['cnt']; ?>">
			<?php echo $tag['tagname']; ?>
		</li>
	<?php endforeach; ?>
	</ul>
