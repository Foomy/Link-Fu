<div id="linklist">
	<?php echo $this->paginationControl($this->paginator, 'Sliding', 'partials/pagination.phtml', array('cssType' => 'top')); ?>
	<?php foreach ($this->linklist as $link): ?>
	<div id="item_<?php echo $link->getId(); ?>" class="item">
